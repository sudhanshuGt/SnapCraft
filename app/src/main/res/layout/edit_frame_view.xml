<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_view"
    android:layout_width="200dp"
    android:layout_margin="20dp"
      android:layout_height="150dp">


    <RelativeLayout
        android:id="@+id/frame_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_selector_border"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/frame_img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/frame_rm_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/circular_bg"
        android:elevation="5dp"
        android:src="@drawable/remove"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/frame_sc_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circular_bg"
        android:elevation="5dp"
          android:src="@drawable/scale"
         android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"></ImageView>


    <ImageView
        android:id="@+id/frame_flip_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
         android:layout_marginLeft="5dp"
        android:background="@drawable/circular_bg"
        android:elevation="5dp"
        android:src="@drawable/flip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></ImageView>


    <ImageView
        android:id="@+id/frame_ed_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circular_bg"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
         android:src="@drawable/edit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>